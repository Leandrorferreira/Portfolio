
@model Model.Entity.Atendente
@{
    ViewBag.Title = "Formulário";
}
<div class="well well-sm text-primary text-center">
    @ViewBag.MensagemInicialEliminar
</div>
@using (Html.BeginForm())
{
    <div class="form-horizontal" summary="Formulário com informações do atendente a ser excluido" style="padding:10px;">
        <fieldset>
            <div class="form-group">
                @Html.LabelFor(model => model.Matricula, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-2">
                    @Html.EditorFor(model => model.Matricula, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>               
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Nome, htmlAttributes: new { @class = "control-label col-md-2" })            
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Nome, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Cpf, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-4">
                    @Html.EditorFor(model => model.Cpf, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.Funcao, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-6">
                    @Html.EditorFor(model => model.Funcao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                </div>
            </div>        
            <div class="form-actions col-md-offset-2">
                <div class="form-group col-md-3">
                    <input class="btn btn-danger" type="submit" name="btnexcluir" value="Excluir" />
                </div>
                <div class="form-group col-md-3">
                    <a class="btn btn-info" href="~/Atendente/Index">Voltar</a>
                </div>
            </div>
        </fieldset>
    </div>    
}
<!-- Modal -->
<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Mensagem</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="text-primary text-success text-center">
                    @ViewBag.MensagemExito
                </div>
                <div class="text-primary text-danger text-center">
                    @ViewBag.MensagemErro
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
            </div>
        </div>
    </div>
</div>
@if (ViewBag.MensagemExito != null || ViewBag.MensagemErro != null)
{
    @section Scripts{
        <script>
            $(function () {
                $('#exampleModal').modal('show');
            });
        </script>
    }

}
