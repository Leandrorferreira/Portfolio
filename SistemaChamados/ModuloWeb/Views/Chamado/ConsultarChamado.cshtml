@model List<Model.Entity.Chamado>
@{
    ViewBag.Title = "Chamados";
}

<h2 class="text-center text-success">Lista de Chamados</h2>
<div class="table-responsive">
    <table class="table table-hover table-striped" summary="Tabela com dados dos chamados abertos" style="padding:10px;">
        <thead>
            <tr class="bg-primary">
                <th>Protocolo</th>
                <th>Cliente</th>
                <th>Atendente</th>
                <th>Data de Abertura</th>
                <th>Descrição</th>
                <th colspan="3">Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var objChamado in Model)
            {
                <tr>
                    <td>@objChamado.Protocolo</td>
                    @foreach (var item in ViewBag.ListaCliente)
                    {
                        if (item.Matricula == objChamado.Cliente)
                        {
                            <td>@item.Nome</td>
                            break;
                        }

                    }
                    @foreach (var item in ViewBag.ListaAtendente)
                    {
                        if (item.Matricula == objChamado.Atendente)
                        {
                            <td>@item.Nome</td>
                            break;
                        }

                    }

                    <td>@objChamado.DataAbertura</td>
                    <td>@objChamado.DescChamado</td>
                    <td><a class="btn btn-danger" href="~/Chamado/Finalizar/@objChamado.Protocolo">Finalizar</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>


