@model Model.Entity.Chamado
@{
    ViewBag.Title = "Detalhes";
}

@using (Html.BeginForm())
{
    <div class="form-horizontal" summary="Tabela com detalhes do chamado" style="padding:10px;">
        <fieldset>
            <legend>Dados do Chamado</legend>

            <div class="row" style="padding-bottom:8px;">
                <div class="form-group col-md-4">
                    @Html.Label("Protocolo:", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        @Html.EditorFor(model => model.Protocolo, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.Label("Abertura:", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.DataAbertura, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
                <div class="form-group col-md-4">
                    @Html.Label("Finalização:", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.DataFinalizacao, new { htmlAttributes = new { @class = "form-control", @readonly = "readonly" } })
                    </div>
                </div>
            </div>
            <div class="row" style="padding-bottom:8px;">
                <div class="form-group col-md-6">
                    @Html.Label("Cliente", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <label class = "form-control col-md-9"> @ViewBag.Cliente</label> 
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.Label("Atendente", new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        <label class = "form-control col-md-9"> @ViewBag.Atendente</label>
                    </div>
                </div>
            </div>
            <div class="row" style="padding-bottom:8px;">
                <div class="form-group col-md-6">
                    @Html.Label("Problema", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <textarea rows="3" class="form-control" readonly="readonly" placeholder="@Model.DescChamado"></textarea>
                    </div>
                </div>
                <div class="form-group col-md-6">
                    @Html.Label("Solução", new { @class = "control-label col-md-4" })
                    <div class="col-md-8">
                        <textarea rows="3" class="form-control" readonly="readonly" placeholder="@Model.DescSolucao"></textarea>
                    </div>
                </div>
            </div>
            <div class="form-group col-md-6">
                <div class="form-group col-md-4">
                    <a class="btn btn-info" href="~/Chamado/ConsultarChamadoFechado">Voltar</a>
                </div>
            </div>            
        </fieldset>       
    </div>
}

<div>
    @ViewBag.Mensagem
</div>


