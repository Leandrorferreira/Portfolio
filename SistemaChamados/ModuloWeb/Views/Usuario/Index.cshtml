@model List<Model.Entity.Usuario>
@{
    ViewBag.Title = "Lista de Usuários";
}

<h2 class="text-center text-success">Lista de Usuarios</h2>
<div class="well well-sm">
    <a class="btn btn-primary" href="~/Usuario/Create">Novo</a>
    <a class="btn btn-info" href="~/Usuario/BuscarUsuarios">Buscar</a>
</div>
<div class="table-responsive">
    <table class="table table-hover table-striped" summary="Tabela com lista dos usuários cadastrados no sistema" style="padding:10px;">
        <thead>
            <tr class="bg-primary">
                <th>Matricula</th>
                <th>Nome</th>
                <th>CPF</th>
                <th>Ramal</th>
                <th>Empresa</th>
                <th colspan="3">Operações</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var objUsuario in Model)
            {
                <tr>
                    <td>@objUsuario.Matricula</td>
                    <td>@objUsuario.Nome</td>
                    <td>@objUsuario.Cpf</td>
                    <td>@objUsuario.Ramal</td>
                    @foreach (var item in ViewBag.ListaEmpresa)
                    {
                        if (item.CodEmpresa == objUsuario.CodEmpresa)
                        {
                            <td>@item.NomeFantasia</td>
                            break;
                        }
                    }
                    <td><a class="btn btn-success" href="~/Usuario/Find/@objUsuario.Matricula">Detalhes</a></td>
                    <td><a class="btn btn-info" href="~/Usuario/Update/@objUsuario.Matricula">Editar</a></td>
                    <td><a class="btn btn-danger" href="~/Usuario/Delete/@objUsuario.Matricula">Excluir</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>

