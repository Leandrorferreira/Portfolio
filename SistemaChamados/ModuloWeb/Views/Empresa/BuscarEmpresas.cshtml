@using Model.Entity
@model List<Empresa>
@{
    ViewBag.Title = "Buscar Por";
}
<div class="panel panel-default" style="padding:10px;">
    <div class="panel-heading" style="background:#2C3E50; color:#ffffff;"><h2 style="text-align:center; font-family:Arial; font-weight:700;">Buscar Empresa por:</h2></div>
    <div class="panel-body">
        @using (Html.BeginForm())
        {
            <div class="form-horizontal" summary="Formulário para realizar buscas de empresas">
                <fieldset>
                    <div class="row" style="padding-bottom:8px;">
                        <div class="form-group col-md-3">
                            @Html.Label("Nome", new { @class = "control-label col-md-4" })
                            <div class="col-md-8">
                                @Html.TextBox("txtnome", null, new { @class = "form-control" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            @Html.Label("CNPJ", new { @class = "control-label col-md-3" })
                            <div class="col-md-9">
                                @Html.TextBox("txtcnpj", null, new { @class = "form-control", id = "txtCNPJ" })
                            </div>
                        </div>
                        <div class="form-group col-md-3">
                            <div class="col-xs-4">
                                <input class="btn btn-primary" type="submit" value="Buscar" />
                            </div>
                            <div class="col-xs-4">
                                <a class="btn btn-info" href="~/Empresa/Index">Voltar</a>
                            </div>
                        </div>
                    </div>
                </fieldset>
            </div>            
        }
    </div>
</div>

<div class="table-responsive">

    <table class="table table-striped" summary="Tabela com dados das empresas" style="padding:10px;">
        <tr>
            <th>Código</th>
            <th>CNPJ</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th colspan="3">Operações</th>
        </tr>
        @foreach (var objEmpresa in Model)
        {
            <tr>
                <th>@objEmpresa.CodEmpresa</th>
                <th>@objEmpresa.Cnpj</th>
                <th>@objEmpresa.NomeFantasia</th>
                <th>@objEmpresa.Telefone</th>

                <td><a class="btn btn-success" href="~/Empresa/Find/@objEmpresa.CodEmpresa">Detalhes</a></td>
                <td><a class="btn btn-info" href="~/Empresa/Update/@objEmpresa.CodEmpresa">Editar</a></td>
                <td><a class="btn btn-danger" href="~/Empresa/Eliminar/@objEmpresa.CodEmpresa">Excluir</a></td>
            </tr>
        }
        <tr></tr>
    </table>
</div>
@section scripts{

    @Scripts.Render("~/bundles/jqueryval")

    <script type="text/javascript">
        $(document).ready(function () {
            $('#txtCNPJ').mask('00.000.000/0000-00', { placeholder: "__.___.___/____-__" });
        });

    </script>
}